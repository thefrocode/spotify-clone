{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@spotify-clone/albums": ["libs/albums/src/index.ts"],
      "@spotify-clone/artists": ["libs/artists/src/index.ts"],
      "@spotify-clone/auth": ["libs/auth/src/index.ts"],
      "@spotify-clone/categories": ["libs/categories/src/index.ts"],
      "@spotify-clone/home": ["libs/home/src/index.ts"],
      "@spotify-clone/playback": ["libs/playblack/src/index.ts"],
      "@spotify-clone/playlists": ["libs/playlists/src/index.ts"],
      "@spotify-clone/search": ["libs/search/src/index.ts"],
      "@spotify-clone/shared": ["libs/shared/src/index.ts"],
      "@spotify-clone/shell": ["libs/shell/src/index.ts"],
      "@spotify-clone/shows": ["libs/shows/src/index.ts"],
      "@spotify-clone/ui": ["libs/ui/src/index.ts"],
      "@spotify-clone/user-library": ["libs/user-library/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
